<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:rik='urn:import:ru.otus.rik.web.gwt.client.widget'>

    <ui:with field='res' type='ru.otus.rik.web.gwt.client.text.WebConstants'/>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='5'>
            <g:HorizontalPanel>
                <g:Label text="{res.title}" addStyleNames="firstColumnWidth"></g:Label>
            </g:HorizontalPanel>
        </g:north>

        <g:center>
            <g:SplitLayoutPanel>
                <g:east size='192'>
                    <!--
                    <rik:Shortcuts ui:field='shortcuts' />
                    -->
                    <g:VerticalPanel ui:field="shortcutPanel"/>
                </g:east>

                <g:north size='200'>
                    <!--
                    <rik:HeaderMenu ui:field='headerMenu' />
                    -->
                    <g:VerticalPanel ui:field="menuPanel"/>
                </g:north>

                <g:center>
                    <g:VerticalPanel ui:field="dynamicContentPanel"/>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>